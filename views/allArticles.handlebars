<div class="section-article">
    {{#each articles}}
    <div class="card card-body article bg-clear col-6" id="card-{{@index}}">
        <div class=" row">
            <div class="col-10">
                <h4>{{title}}</h4>
            </div>
            <div class="col-2"> <button type="submit" class="btn btn-link save" data-link="{{link}}"
                    data-title="{{title}}" data-text="{{text}}" data-img="{{imgSrc}}"
                    card-parent="card-{{@index}}">Save</button>
            </div>
        </div>
        <hr>
        <div class="row text-left">
            <div class="col-12"> <img class="img-article" src="{{imgSrc}}" alt=""> <a href="{{link}}"> {{text}}</a>
            </div>

        </div>
    </div>
    {{/each}}
</div>